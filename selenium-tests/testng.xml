<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UniClub Test Suite" parallel="false" verbose="1">
    
    <parameter name="browser" value="chrome"/>
    
    <!-- Listeners for reporting -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <!-- Custom listener for screenshot-on-failure-only (saves disk space) -->
        <listener class-name="com.uniclub.listeners.AllureTestListener"/>
    </listeners>
    
    <!-- User Authentication Tests -->
    <test name="User Authentication Tests" preserve-order="true">
        <classes>
            <class name="com.uniclub.tests.UserLoginTest"/>
        </classes>
    </test>
    
    <!-- User Registration Tests -->
    <test name="User Registration Tests" preserve-order="true">
        <classes>
            <class name="com.uniclub.tests.UserRegisterTest"/>
        </classes>
    </test>
    
</suite>
